@model test.Models.InputMessage

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>Sent Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="message-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" required id="username" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea  asp-for="Message" required id="message" rows="6" class="form-control" >
                  
                </textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sent" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-8">
        <ul id="messages"></ul>
    </div>
</div>

 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script src="~/js/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/app/app.js"></script>
    
}
